{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom",
      "esnext"
    ],
    "paths": {
      "@viberlab/storage": [
        "dist/vbr-storage"
      ],
      "@viberlab/storage/*": [
        "dist/vbr-storage/*"
      ],
      "@viberlab/input-keyboard": [
        "dist/vbr-input-keyboard"
      ],
      "@viberlab/input-keyboard/*": [
        "dist/vbr-input-keyboard/*"
      ],
      "@viberlab/translate": [
        "dist/vbr-translate"
      ],
      "@viberlab/translate/*": [
        "dist/vbr-translate/*"
      ],
      "@viberlab/translate-loader": [
        "dist/vbr-translate-loader"
      ],
      "@viberlab/translate-loader/*": [
        "dist/vbr-translate-loader/*"
      ],
      "@viberlab/translate-pipe": [
        "dist/vbr-translate-pipe"
      ],
      "@viberlab/translate-pipe/*": [
        "dist/vbr-translate-pipe/*"
      ],
      "@viberlab/sidenav-menu": [
        "dist/vbr-sidenav-menu"
      ],
      "@viberlab/sidenav-menu/*": [
        "dist/vbr-sidenav-menu/*"
      ],
      "@viberlab/layout": [
        "dist/vbr-layout"
      ],
      "@viberlab/layout/*": [
        "dist/vbr-layout/*"
      ],
      "@viberlab/squircle": [
        "dist/vbr-squircle"
      ],
      "@viberlab/squircle/*": [
        "dist/vbr-squircle/*"
      ],
      "@viberlab/pulsar": [
        "dist/vbr-pulsar"
      ],
      "@viberlab/pulsar/*": [
        "dist/vbr-pulsar/*"
      ],
      "vbr-scrollable": [
        "dist/vbr-scrollable"
      ],
      "vbr-scrollable/*": [
        "dist/vbr-scrollable/*"
      ]
    }
  }
}
